{
  "name": "@adobe/exc-app",
  "version": "1.1.5",
  "main": "index.js",
  "source": "index.ts",
  "scripts": {
    "docs": "rm -rf docs && npm run typedoc",
    "format": "eslint . --fix --ext=.ts",
    "lint": "eslint . --ext=.ts",
    "preBuild": "node build/preBuild.js",
    "prepack": "yarn preBuild && tsc",
    "readmeupdate": "cp README.md docs && sed -i -e 's/\\/docs//g' docs/README.md && rm -rf docs/README.md-e",
    "test": "cross-env NODE_ENV=test jest tests/* --coverage && tsc --noEmit",
    "typedoc": "typedoc --hideSources --options typedocOptions.json"
  },
  "license": "CC-BY-ND-4.0",
  "files": [
    "docs/**/*.md",
    "**/*.d.ts",
    "**/*.js",
    "**/*.js.map"
  ],
  "description": "This project provides the interface for app developers to integrate with the experience cloud unified shell web application at https://experience.adobe.com",
  "publishConfig": {
    "registry": "https://registry.npmjs.com/"
  },
  "dependencies": {
    "@apollo/client": "3.5.7",
    "graphql": "15.5.3",
    "graphql-tag": "2.12.6"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "eslint": "8.1.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-jsdoc": "36.1.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-rulesdir": "0.2.1",
    "glob": "8.0.3",
    "jest": "26.6.3",
    "typedoc": "0.19.2",
    "typedoc-plugin-external-module-name": "4.0.6",
    "typedoc-plugin-markdown": "3.1.1",
    "typescript": "4.4.4"
  }
}
